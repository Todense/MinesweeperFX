<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0"
           xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="game.Controller">
   <Canvas fx:id="canvas" height="512.0" onMouseClicked="#OnMouseClicked" width="512.0"/>
   <HBox prefHeight="100.0" prefWidth="200.0" spacing="20.0">
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Difficulty:">
         <font>
            <Font size="20.0"/>
         </font>
      </Text>
      <ChoiceBox fx:id="difficultyChoiceBox" prefHeight="45.0" prefWidth="76.0"/>
      <Button mnemonicParsing="false" onAction="#NewGameAction" prefHeight="27.0" prefWidth="130.0" text="New Game"/>
      <Text fx:id="flagsText" strokeType="OUTSIDE" strokeWidth="0.0" text="Flags:" wrappingWidth="130.630859375">
         <font>
            <Font size="20.0"/>
         </font>
      </Text>
   </HBox>
</SplitPane>
